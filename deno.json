{
  "name": "@egll/personal-finance",
  "license": "AGPL-3.0-only",
  "exports": "./main.ts",
  "workspace": ["./api", "./prisma"],
  "tasks": {
    "dev": "deno run --watch main.ts",
    "prisma": "deno run -A --unstable npm:prisma",
    "prisma:init": "deno task prisma migrate dev --name init",
    "prisma:generate": "deno task prisma generate --schema ./prisma/schema.prisma && deno task prisma:patch",
    "prisma:patch": "deno run -A prisma/patch.ts"
  },
  "imports": {
    "@prisma/client": "npm:@prisma/client@^5.22.0",
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2",
    "@std/path": "jsr:@std/path@^1.0.8",
    "prisma": "npm:prisma@^5.22.0"
  },
  "fmt": {
    "semiColons": false
  },
  "nodeModulesDir": "auto"
}
